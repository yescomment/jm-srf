---
import Container from '../core/Container.astro';
import accentImg from '../../../assets/imagery/plants/leaves10-edgeB.png';

const {narrow} = Astro.props;
---

<Container narrow={narrow} accentImage={accentImg}>
  <section class="text__section">
    <slot></slot>
  </section>
</Container>

<style>
  .text__section {
    max-width: 500px;
    margin-left: auto;
  }
</style>

