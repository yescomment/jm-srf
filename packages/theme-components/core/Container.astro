---
import birdsImg from '../../assets/imagery/plants/birds1.png'

const {
  narrow,
  accentImage
} = Astro.props;
---

<div
  class={`content__container ${narrow ? `content__container--narrow` : ``}`}
  style={accentImage && `background-image: url(${accentImage.src});`}
>
  <slot></slot>
</div>

<style>
  .content__container {
    margin: 0 auto;
    max-width: var(--container-max-width);
    padding: var(--container-padding);

    background-position: bottom left;
    background-repeat: no-repeat;
  }
  .content__container--narrow {
    max-width: var(--container-max-width-narrow);
  }
</style>