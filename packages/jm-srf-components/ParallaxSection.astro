---
const { backgroundImage } = Astro.props

import { getImage } from 'astro:assets'

const optimizedBackgroundImage = await getImage({
  src: backgroundImage,
  format: 'webp',
})
---

<!-- CSS Scroll Timeline polyfill -->
<script src="https://flackr.github.io/scroll-timeline/dist/scroll-timeline.js"></script>

<section class="parallax" style={`background-image: url(${optimizedBackgroundImage.src})`}>
  <slot/>
</section>

<style lang="scss">
  .parallax {
    :global(*) {
      color: var(--color-light) !important;
    }
    padding: 4rem;
    margin: 4rem -4rem;
    min-height: 90vh;
    background-color: var(--color-primary-tinted-translucent);

    width: 100vw;
    left: 0;
    z-index: 1;

    position: relative;
    &::before {
      content: '';
      position: absolute;
      display: block;
      width: 100%;
      height: 100%;
      background-color: var(--color-primary-tinted);
      opacity: 0.9;
      top: 0;
      left: 0;
      z-index: -1;
    }
  }
</style>