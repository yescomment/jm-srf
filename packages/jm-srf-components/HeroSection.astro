---
const { backgroundImage } = Astro.props
---
<section style={`background-image: url(${backgroundImage.src})`}>
  <article>
    <slot/>
  </article>
</section>

<style lang="scss">
  section {
    display: flex;
    height: 90vh;
    min-height: fit-content;
    background-size: cover;
    background-position: center;
    background-color: var(--color-primary);

    article {
      max-width: 600px;
      margin: auto min(4rem, 10vw);
      color: white;
      text-shadow: 0 0 0.1rem #00000033;
    }
  }
</style>
