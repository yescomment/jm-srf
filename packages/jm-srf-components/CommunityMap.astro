<style lang="scss">
  #srfmap-container {
    max-width: 1440px;
    margin-inline: auto;
  }

  .srfmap-slide {
    display: flex;
    gap: 1rem;
    flex-direction: row-reverse;
    height: 100vh;
    justify-content: center;

    h2 {
      font-size: 3rem;
      color: var(--color-secondary);
      margin-top: 0;
    }

    h3 {
      background: none;
      color: currentColor;
      padding: 0;
      text-wrap: balance;
    }

    .image {
      flex-basis: 40%;
      justify-self: stretch;

      :global(img) {
        height: 100%;
        object-fit: cover;
        // TODO: animate object-position
      }
    }

    .text {
      flex: 1;
      padding: 1rem;
      display: flex;
      flex-direction: column;
      justify-content: center;
      // TODO: animate pos-y for parallax
    }
  }

  #srfmap-key {
    background: var(--color-light-tinted);
    display: flex;
    justify-content: space-between;
    position: sticky;
    top: 50px;
    padding: 2rem;
    border-bottom: 1rem solid var(--color-primary);
    overflow-x: scroll;

    .icon {
      box-sizing: border-box;
      background-color: var(--color-light);
      padding: 1rem;
    }
  }
</style>

