---
// import { Icon } from 'astro-icon'
---
<header>
  <nav class="left">
    <slot name="left"/>
  </nav>
  <a href="/" class="logo-container">
    <slot name="logo" class="logo">Home</slot>
  </a>
  <nav class="right">
    <slot name="right"/>
  </nav>
</header>

<style lang="scss">
  header {
    padding: 0 1rem;
    display: grid;
    grid-template-columns: 1fr 50px 1fr;
    position: sticky;
    top: 0;
    height: 3rem;
    background: var(--color-light);
    box-shadow: 0 0 4px rgba(0, 0, 0, 0.1);
  }

  nav {
    display: flex;
    flex-direction: row;
    align-items: center;
    overflow-x: scroll;
    font-size: 16px;
    height: 3rem;
    gap: 0.5rem;

    overflow-x: auto;
    white-space: nowrap;
  }

  nav.right {
    justify-content: flex-end;
  }

  .logo-container {
    background-color: var(--color-primary);
    box-sizing: content-box;
    padding: 0.5rem;
    box-shadow: 0 0 4px rgba(0, 0, 0, 0.5);
  }
</style>