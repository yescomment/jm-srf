---
import { Icon } from 'astro-icon/components'
---
<header id="menu">
  <div class="menu-button">
    <a href="#menu" class="menu-button-show">
      <Icon name="material-symbols:menu-rounded" />
    </a>
    <a href="#" class="menu-button-hide">
      <Icon name="material-symbols:close-rounded" />
    </a>
  </div>
  <nav class="left">
    <a href="/" class="logo-container">
      <slot name="logo-icon" class="logo-icon">Home</slot>
      <slot name="logo-full" class="logo-full">Home</slot>
    </a>
    <slot name="left"/>
  </nav>
  <nav class="right">
    <slot name="right"/>
  </nav>
</header>

<style lang="scss">
  header {
    --height-closed: 3rem;
    padding: 0 1rem;
    display: flex;
    justify-content: space-between;
    position: sticky;
    top: 0;
    height: var(--height-closed);
    background: var(--color-light);
    box-shadow: 0 0 4px rgba(0, 0, 0, 0.1);
    z-index: 10;
    transition: height 0.5s;
  }

  .menu-button {
    height: var(--height-closed);
    display: flex;
    justify-content: center;
    align-items: center;
  }

  @media (min-width: 768px) {
    .menu-button {
      display: none;
    }
  }

  @media (max-width: 768px) {
    header:not(:target) {
      .menu-button-hide {
        display: none;
      }
    }

    header:target {
      .menu-button-show {
        display: none;
      }
      height: 12rem;
      // overflow-y: visible;

      nav {
        flex-wrap: wrap;
        height: max-content;
      }

      .left {
        flex-direction: column;
        justify-content: space-around;
      }
    }
  }

  nav {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 0.7rem;
    font-weight: 500;
    overflow-x: auto;
    white-space: nowrap;

    &.right {
      flex-shrink: 0;
    }

    &.left :global(.logo-full) {
      /* .logo-container not global, only for leftmost */
      border-right: 2px solid var(--color-primary);
      padding-right: 1.5em;
      margin-right: 0.5em;
    }
  }

  :global(.logo-container) {
    height: var(--height-closed);
    // align-self: start;
    box-sizing: border-box;
    padding: 0.5rem;
    flex-shrink: 0;

    :global(.logo-icon) {
      display: none;
    }

    @media (max-width: 768px) {
      :global(.logo-full) {
        display: none;
      }

      :global(.logo-icon) {
        display: block;
        height: 100%;
      }
    }
  }
</style>

<style is:global lang="scss">
  // must be global as these are <slot/>s
  nav > a {
    color: var(--color-primary);
    font-size: 14px;
    text-decoration: none;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-inline: 0.4rem;

    img {
      height: 1.2rem;
    }

    &:hover {
      background-color: var(--color-light-tinted);
    }

    &.special {
      padding: 0.5rem;
      background-color: var(--color-pop);
      box-shadow: 0 0 5px grey;
    }

    &.to-srfcapital,
    &.to-srfimpact {
      color: var(--color-light);
      box-shadow: 0 0 2px grey;
    }

    &.to-srfcapital {
      background-color: #223749; // --color-primary
      &:hover {
        background-color: #122739; // --color-primary-tinted
      }
    }

    &.to-srfimpact {
      background-color: #e74c34; // --color-primary
      &:hover {
        background-color: #c93d2f; // --color-primary-tinted
      }
    }
  }
</style>
