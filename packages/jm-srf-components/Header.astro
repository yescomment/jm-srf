<header>
  <nav class="left">
    <slot name="left"/>
  </nav>
  <a href="/" class="logo-container">
    <slot name="logo" class="logo">Home</slot>
  </a>
  <nav class="right">
    <slot name="right"/>
  </nav>
</header>

<style lang="scss">
  header {
    padding: 0 1rem;
    display: grid;
    grid-template-columns: 1fr 50px 1fr;
    grid-template-areas: "left mid right";
    position: sticky;
    top: 0;
    height: 3rem;
    background: var(--color-light);
    box-shadow: 0 0 4px rgba(0, 0, 0, 0.1);
    z-index: 10;
  }

  nav {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 0.7rem;
    font-weight: 500;
    height: 3rem;
    overflow-x: auto;
    white-space: nowrap;

    &.right {
      justify-content: flex-end;
    }
  }

  .logo-container {
    background-color: var(--color-primary);
    box-sizing: content-box;
    padding: 0.5rem;
    box-shadow: 0 0 4px rgba(0, 0, 0, 0.5);
  }

  @media (max-width: 512px) {
    header {
      grid-template-columns: 50px auto min-content;

      nav.left {
        grid-area: mid;
      }

      nav {
        overflow-y: scroll;
      }

      .logo-container {
        grid-area: left;
        left: 0;
        // TODO: I think .logo-container just needs to become absolute
      }
    }
  }
</style>

<style is:global lang="scss">
  // must be global as these are <slot/>s
  nav > a {
    text-decoration: none;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-inline: 0.4rem;

    &:hover {
      background-color: var(--color-light-tinted);
    }

    &.special {
      padding: 0.5rem;
      background-color: var(--color-pop);
    }

    &.to-srfcapital {
      color: var(--color-light);
      background-color: #223749; // --color-primary
      &:hover {
        background-color: #223749; // --color-primary-tinted
      }
    }

    &.to-srfimpact {
      color: var(--color-light);
      background-color: #e74c34; // --color-primary
      &:hover {
        background-color: #c93d2f; // --color-primary-tinted
      }
    }
  }
</style>
