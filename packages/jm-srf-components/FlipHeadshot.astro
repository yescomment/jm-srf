---
const {
	image,
	name,
	href,
	backText = `Meet ${name.split(" ")[0]}`,
} = Astro.props

import { getImage } from 'astro:assets'

const optimizedImage = await getImage({
	src: image,
	format: 'webp',
})
---
<a href={href} class="holder">
	<div class="front"></div>
	<h3>{name}</h3>
  <slot/>
</a>

<style lang="scss">
	a {
		display: block;
		position: relative;
		background-size: cover;
		transition: transform 1s;
		backface-visibility: hidden;

		&:hover {
			transform: rotateY(180deg);
		}

		&::after {
			content: 'Meet NAME';
			display: block;
			text-align: center;
			align-content: center;
			position: absolute;
			width: 100%;
			height: 100%;
			top: 0;
			left: 0;
			background-color: var(--color-pop);
			transform: rotateY(180deg);
		}
	}
</style>
