---
const {
	image,
	name,
	title,
	href,
	backText = `Meet ${name.split(" ")[0]}`,
} = Astro.props

import { Image } from 'astro:assets'
---
<a href={href} class="holder">
	<Image src={image} alt={`Portrait of ${name}`}/>
	<p class="name">{name}</p>
	<p class="title">{title}</p>
  <slot/>
</a>

<style lang="scss">
	a {
		perspective: 800px;
		text-decoration: none;

		&:hover {
			color: var(--color-pop);
		}
	}

	.name {
		font-size: 1.2rem;
		font-weight: 600;
	}

	.title {
		font-weight: 300;
	}

	img {
		display: block;
		position: relative;
		transition: transform 1s, filter 1.5s;

	}

	a:hover img {
		transform: rotateY(16deg) rotateX(3deg);
		filter: brightness(1.2);
	}
</style>
