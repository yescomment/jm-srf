---
import { Image } from 'astro:assets'
import BrightSection from './BrightSection.astro'

// defaults
import birdsImg from '../../assets/imagery/plants/birds1.png'
import holdingImg from '../../assets/imagery/people/pexels-emma-bauso-2833394.jpg';

const {
  title,
  deck,
  accentImage = birdsImg,
  primaryImage = holdingImg,
  primaryImageDesc = 'People thriving in community, in place'
} = Astro.props
---
<section class="hero">
  <div class="block" style={accentImage && `background-image: url(${accentImage.src})`}>
    <div class="titles">
      <h1>{title}</h1>
      <h2>{deck}</h2>
    </div>
    <aside class="filmstrip">
      <Image src={primaryImage} alt={primaryImageDesc}/>
      <Image class="dupe" src={primaryImage} alt={`${primaryImageDesc} again, like a filmstrip`}/>
    </aside>
  </div>
</section>
<BrightSection>
  <slot />
</BrightSection>

<style lang="scss">
  h1 {
    font-weight: 300;
    font-size: min(20vw, 96px);
    color: var(--color-secondary);
    text-shadow: 0 0 50px var(--color-light);
  }

  h2 {
    font-size: 1.5rem;
    font-family: var(--font-family-sans);
    font-weight: 200;
    background-color: var(--color-light);
    border-top: 0.25rem solid var(--color-secondary);
    border-bottom: 0.25rem solid var(--color-secondary);
    padding: 1rem;
  }

  .hero {

    .block {
      display: flex;
      flex-direction: row;
      min-height: 90vh;
      height: fit-content;
      background-color: var(--color-light);

      background-repeat: no-repeat;
      background-size: 50%;
      background-position: bottom left;

      width: 100%;

      padding-left: 4rem
    }

    .titles {
      width: 30vw;
      min-width: 40%;
      z-index: 1;
      flex: 1;

      margin-inline: 2rem;
    }

    .filmstrip {
      transform: translateY(8rem);
      max-width: 500px;
      z-index: 0;

      img {
        height: auto;
        position: relative;
        aspect-ratio: 3 / 4;
        object-fit: cover;
      }

      .dupe {
        position: absolute;
        transform: translateY(calc(-200% - 4rem));
      }
    }

    @media (max-width: 768px) {
      .titles {
        width: 100%;
        hyphens: auto;
      }
      .filmstrip {
        display: none;
      }
    }
  }
</style>
