---
const {
  videoUrl,
} = Astro.props
---
<section>
  <article>
    <slot/>
  </article>
  <video autoplay loop muted>
    <source src={videoUrl} type="video/mp4">
  </video>
</section>

<style lang="scss">
  section {
    display: flex;
    grid-template-columns: 1fr 1fr;
    background-size: cover;
    background-position: center;
    background-color: white;

    align-content: end;

    height: max-content;

    article {
      margin: 2rem;
      color: var(--color-primary);
      text-shadow: 0 0 0.1rem #00000033;

      display: flex;
      flex-direction: column;
      justify-content: end;

      :global(h1, h2) {
        margin-block: 0.5rem;
        text-wrap: balance;
      }

      :global(h1) {
        font-size: min(inherit, 1vw);
      }

      :global(h2) {
        font-size: 1.5rem;
        margin-block: 0.5rem;
        align-self: flex-end;
      }
    }

    video {
      height: 50vw;
      aspect-ratio: 1/1;
      object-fit: cover;
    }
  }

  @media (max-width: 768px) {
    section {
      flex-direction: column;
      height: auto;

      article {
        order: 1;

        :global(h1) {
          margin: 0;
        }
      }

      video {
        // flex-grow: 0;
        // max-width: 10rem;
        // margin: 2rem;
        // margin-left: 5rem;
      }
    }
  }
</style>
