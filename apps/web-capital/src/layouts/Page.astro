---
import { Button, Footer } from 'srf-theme-components';
import { Header } from 'jm-srf-components';
import Layout from './Base.astro';
import type { Props as BaseHeadProps } from '../components/head/BaseHead.astro';
import Logo from '../components/Logo.astro';
import settings from '../config/settings';
import { footerLists, footerSocials } from '../config/footer';


export interface Props {
	seo?: BaseHeadProps;
}

import { nav } from '../config/nav.js';

const { seo } = Astro.props as Props;
---
<Layout seo={seo}>
	<Header slot="header" navLinksLeft={nav.left} navLinksRight={nav.right}>
		<Fragment slot="left">
			<a href="/about">About</a>
			<a href="/strategy">Strategy</a>
			<a href="/impact">Impact</a>
			<a href="/whealth-papers">The (W)Health Papers</a>
		</Fragment>
		<img slot="logo" src="/assets/images/srf_capital_stacked.svg" alt="SRF Impact Logo">
		<Fragment slot="right">
			<a href="/company/contact">Contact</a>
			<a href="//srfcapital.org">SRF Capital</a>
		</Fragment>
	</Header>
	<div id="page">
		<slot />
	</div>
	<Footer
		slot="footer"
		background="var(--theme-surface-1)"
		color="var(--theme-on-surface-1)"
		footerLists={footerLists}
    footerSocials={footerSocials}
		copyrightName={settings.name}
    showLittleSticksPlug={settings.showLittleSticksPlug}
	>
		<Logo slot="logo" />
	</Footer>
</Layout>
