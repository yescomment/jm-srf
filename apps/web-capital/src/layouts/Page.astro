---
import '../styles/theme.css'

import { Icon } from 'astro-icon/components'

import { Button } from 'srf-theme-components';
import { BaseHtml, Header, Footer, config } from 'jm-srf-components';
import type { Props as BaseHeadProps } from '../components/head/BaseHead.astro';
import settings from '../config/settings';

import logoCapHoriPrimy from '@assets/logos/srf_capital_wordmark_horizontal_primary.svg';
import logoCapIconPrimy from '@assets/logos/srf_capital_icon_primary.svg';
import logoCapStacWhite from '@assets/logos/srf_capital_wordmark_stacked_white.svg';

import logoImpHoriPrimy from '@assets/logos/srf_impact_wordmark_horizontal_primary.svg';
import logoImpStacWhite from '@assets/logos/srf_impact_wordmark_stacked_white.svg';

export interface Props {
	seo?: BaseHeadProps;
}

const { seo } = Astro.props as Props;
---
<BaseHtml seo={seo}>
	<Header slot="header">
		<img slot="logo-full" class="logo-full" src={logoCapHoriPrimy.src} alt="SRF Impact Logo">
		<img slot="logo-icon" class="logo-icon" src={logoCapIconPrimy.src} alt="SRF Impact Logo">
		<Fragment slot="left">
			<a href="/meet">Meet</a>
			<a href="/strategize">Strategize</a>
			<a href="/theorize">Theorize</a>
			<a href="/whealth+">(W)Health+</a>
			<a href="/community">Community</a>
		</Fragment>
		<Fragment slot="right">
			<!-- <a href="/insights">Insights</a> TODO: subdomain? -->
			<a class="to-srfimpact" href={config.srfImpactUrl}>
				<img class="logo" src={logoImpHoriPrimy.src} alt="SRF Impact">
			</a>
		</Fragment>
	</Header>
	<div id="page">
		<slot />
	</div>
	<Footer>
		<a slot="about" href="mailto:info@srf.capital">
			<Icon name="material-symbols:mail-rounded" /> Contact
		</a>
		<hr slot="about" />
		<img class="logo" slot="about" src={logoCapStacWhite.src} alt="SRF Capital">

		<a slot="sitenav" href="/meet">Meet</a>
		<a slot="sitenav" href="/strategize">Strategize</a>
		<a slot="sitenav" href="/theorize">Theorize</a>
		<a slot="sitenav" href="/whealth+">(W)Health+</a>
		<a slot="sitenav" href="/community">Community</a>

		<a class="to-srfimpact button" slot="othersite" href={config.srfImpactUrl}>
			<img class="logo" src={logoImpStacWhite.src} alt="SRF Impact">
		</a>
	</Footer>
</BaseHtml>
