---
import Layout from '../layouts/Page.astro';
import { TitleSection, TextSection } from 'jm-srf-components';

const seo = {
	title: 'SRF Impact ❦ Not Found',
};
---

<Layout {seo}>
	<TitleSection
		title='Not found'
		deck='Error 404'
		hideBrightSection={true}
	>
	</TitleSection>

	<TextSection>
		<p class="not-found-note">We frequently update paths and content. This page has been retired.</p>
		<div class="not-found-links">
			<a class="not-found-link not-found-link-primary" href="/">See what we’re working on now</a>
		</div>
	</TextSection>
</Layout>

<style>
	.not-found-note {
		max-width: 36ch;
		margin-block: 0 1rem;
	}

	.not-found-links {
		display: flex;
		flex-wrap: wrap;
		gap: 0.65rem;
	}

	.not-found-link {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 0.6rem 0.95rem;
		border: 1px solid var(--color-primary-tinted);
		color: var(--color-primary);
		text-decoration: none;
		background: transparent;
		transition: background-color 0.2s ease, color 0.2s ease;
	}

	.not-found-link:hover {
		background-color: var(--color-light-tinted);
	}

	.not-found-link-primary {
		background-color: var(--color-primary);
		border-color: var(--color-primary);
		color: var(--color-light);
	}

	.not-found-link-primary:hover {
		background-color: var(--color-primary-tinted);
		border-color: var(--color-primary-tinted);
		color: var(--color-light);
	}
</style>
